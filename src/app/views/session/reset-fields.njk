<div class="item">
    <div>Email</div>
    <div class='input'>
        <input 
            type="email" 
            name="email" 
            placeholder="Digite o seu email" 
            value='{{user.email}}'
            onblur="Validate.apply(this, 'isEmail')"
        >  
    </div>
</div>

<div class="item">
    <div>Digite uma nova Senha</div>
    <div class='input'>
        <input 
            type="password" 
            name="password" 
            placeholder="Digite uma nova senha"
        >
    </div>
</div>

<div class="item">
    <div>Repetição da Senha</div>
    <div class='input'>
        <input 
            type="password" 
            name="passwordRepeat" 
            placeholder="Repita a nova senha"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">