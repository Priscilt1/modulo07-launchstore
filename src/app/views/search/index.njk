{% extends "layout.njk" %}
{% import 'parts/section-products.njk' as section %}

{% block content %}

<section class="search-products container">
    <aside>
        <div class="header">
            <h2>{{search.term}}</h2>
            <p>{{search.total}} encontrado</p>
        </div>

        <nav class="categories">
            <h4>Categorias</h4>
            <ul>
                {% for category in categories %}
                    <li><a href="/products/search?filter={{search.term}}&category={{category.id}}">{{category.name}}</a></li>
                {% endfor %}
            </ul>
        </nav>
    </aside>

    {# Chamando a função do Macro - nome, classe e produto  #} 
    {{section.products('', 'searched', products)}} 

</section>

{% endblock content %}